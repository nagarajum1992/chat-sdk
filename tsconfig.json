{
  "compilerOptions": {
    "baseUrl": "./src/",
    "lib": ["DOM", "ES6", "DOM.Iterable", "ScriptHost", "ES2016.Array.Include"],
    "declaration": true,
    "declarationDir": "./dist/types", // Output folder for .d.ts files
    "types": ["react"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "emitDeclarationOnly": true, // Only emit declaration files (.d.ts)
    "outDir": "dist", // Output folder for all build files
    "jsx": "react-jsx"
  },
  "include": ["src/**/*"]
}
